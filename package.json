{
  "name": "forge",
  "description": "Multi-page markdown document storage and presentation",
  "author": "nivthefox",
  "license": "MIT",
  "version": "1.3.0",
  "engines": {
    "node": ">=16.12.0",
    "yarn": ">=1.22.17"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sosly/forge.git"
  },
  "scripts": {
    "build:dev": "npm run migrations:run && npm run parser:generate && vite build",
    "build:prod": "npm run migrations:run && npm run parser:generate && vite build",
    "build": "npm run build:prod",
    "dev": "cross-env DOTENV_CONFIG_PATH=.env.development ts-node-dev --require dotenv/config --require tsconfig-paths/register ./src/main.ts --inspect --respawn --transpileOnly",
    "migrations:clean": "rm ./src/migrations/*.js",
    "migrations:create": "typeorm migration:create",
    "migrations:compile": "tsc -p ./src/migrations",
    "migrations:revert": "typeorm migration:revert",
    "migrations:run": "npm run migrations:compile && typeorm migration:run",
    "parser:generate": "tspeg ./src/usecase/parser/grammar.peg ./src/usecase/parser/Parser.ts",
    "start": "ts-node --require tsconfig-paths/register ./src/main.ts",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
    "start:dev": "npm run docker:dev:up && concurrently --kill-others-on-fail \"npm run parser:generate\" \"vite build --watch\" \"npm run dev\" && npm run docker:dev:down",
    "start:mock": "vite",
    "typeorm": "typeorm"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/vue-fontawesome": "^3.0.0-5",
    "@koa/router": "^10.1.1",
    "axios": "^0.24.0",
    "click-outside-vue3": "^4.0.1",
    "convict": "^6.2.1",
    "dotenv": "^10.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.4",
    "koa-rewrite": "^3.0.1",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "markdown-it": "^12.3.0",
    "markdown-it-anchor": "^8.4.1",
    "passport-discord": "^0.1.4",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-convict": "^1.1.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tspeg": "^3.2.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.5.4",
    "uslug": "^1.0.4",
    "vue": "^3.2.26",
    "vue-router": "^4.0.12",
    "vue3-ace-editor": "^2.2.1",
    "vue3-shortkey": "^4.0.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-passport": "^4.0.3",
    "@types/koa-session": "^5.10.4",
    "@types/koa-static": "^4.0.2",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-anchor": "^7.0.0",
    "@types/node": "^17.0.4",
    "@types/passport-discord": "^0.1.5",
    "@types/uslug": "^1.0.1",
    "@types/vue": "^2.0.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "cross-env": "^10.0.0",
    "fast-glob": "^3.2.7",
    "mockjs": "^1.1.0",
    "pg-mem": "^3.0.5",
    "rollup": "^2.62.0",
    "sass": "^1.45.1",
    "ts-node-dev": "^1.1.8",
    "vite": "^2.7.6",
    "vite-plugin-mock": "^2.9.6",
    "vue-tsc": "^0.30.0"
  }
}
