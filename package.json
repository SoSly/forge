{
  "name": "forge",
  "description": "Multi-page markdown document storage and presentation",
  "author": "nivthefox",
  "license": "MIT",
  "version": "1.3.0",
  "engines": {
    "node": ">=16.12.0",
    "yarn": ">=1.22.17"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sosly/forge.git"
  },
  "scripts": {
    "build:dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --watch",
    "build:prod": "npm run migrations:run && npm run parser:generate && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build": "npm run build:prod",
    "dev": "ts-node-dev --require tsconfig-paths/register ./src/main.ts --inspect --respawn --transpileOnly",
    "migrations:clean": "rm ./src/migrations/*.js",
    "migrations:create": "typeorm migration:create",
    "migrations:compile": "tsc -p ./src/migrations",
    "migrations:revert": "typeorm migration:revert",
    "migrations:run": "npm run migrations:compile && typeorm migration:run",
    "parser:generate": "tspeg ./src/usecase/parser/grammar.peg ./src/usecase/parser/Parser.ts",
    "start": "ts-node --require tsconfig-paths/register ./src/main.ts",
    "start:dev": "concurrently \"npm run parser:generate\" \"npm run build:dev\" \"npm run dev\"",
    "typeorm": "typeorm"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "@types/convict": "^6.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-passport": "^4.0.3",
    "@types/koa-session": "^5.10.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^8.0.11",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-anchor": "^7.0.0",
    "@types/node": "^17.0.4",
    "@types/passport-discord": "^0.1.5",
    "@types/uslug": "^1.0.1",
    "convict": "^6.2.1",
    "dotenv": "^10.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.4",
    "koa-rewrite": "^3.0.1",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "markdown-it": "^12.3.0",
    "markdown-it-anchor": "^8.4.1",
    "passport-discord": "^0.1.4",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-convict": "^1.1.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.5.4",
    "uslug": "^1.0.4",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.0.1",
    "ts-node-dev": "^1.1.8",
    "vite": "^2.7.6"
  }
}
